//method 1

class Solution {
public:
    bool isValid(string s) {
        stack<char>st;
        //char ch = '';
        for(int i = 0; i < s.length(); i++){
            if(st.empty() || s[i] == '(' or s[i] == '{' || s[i] == '['){
                st.push(s[i]);
                continue;
            }
            if(s[i] == ')'){
                if(st.top() == '('){
                    st.pop();
                }
                else return false;
            }
            if(s[i] == '}'){
                if(st.top() == '{'){
                    st.pop();
                }
                else return false;
            }
            if(s[i] == ']'){
                if(st.top() == '['){
                    st.pop();
                }
                else return false;
            }
        }   
        return st.empty();
    }
};
